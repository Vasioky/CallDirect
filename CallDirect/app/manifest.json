{
  "manifest_version": 2,

  "name": "Call Direct",
  "description": "This extension send a call notification to your android phone",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "options.html",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ]
  //todo: add possibility to call from browser action
  /*,
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  }*/
}